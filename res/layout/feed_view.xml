<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
  android:id="@+id/swiper"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/back" >
  <LinearLayout
    android:id="@+id/media_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/media_bar">
    <Button
      android:id="@+id/previous_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/btn_previous"
      android:paddingTop="12sp"
      android:paddingBottom="12sp"
      android:paddingRight="6sp"
      android:onClick="previousFeed"/>
    <Button
      android:id="@+id/play_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/play_icon"
      android:paddingTop="12sp"
      android:paddingBottom="12sp"
      android:paddingLeft="6sp"
      android:paddingRight="6sp"
      android:onClick="play"/> 
    <Button
      android:id="@+id/next_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/btn_next"
      android:paddingTop="12sp"
      android:paddingBottom="12sp"
      android:paddingLeft="6sp"
      android:onClick="nextFeed"/>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/ad_layout"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#ffd2d2d2"
    android:layout_above="@id/media_bar">
    <com.google.ads.AdView 
      android:id="@+id/adView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#000000"
      ads:adUnitId="a1519e672c9021e"
      ads:adSize="BANNER"
      ads:loadAdOnCreate="true"/>
  </LinearLayout>
  <ListView
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/ad_layout"
    android:fastScrollEnabled="true"/>
  <TextView 
    android:id="@android:id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/ad_layout"
    android:gravity="center"
    android:text="@string/rss_retrieve"
    android:textSize="20sp"
    android:textColor="#ff707070"/>
</RelativeLayout>
